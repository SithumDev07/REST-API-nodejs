<html lang="en">
  <head>
    <%- include("../partials/head", {title: "Home"}) %>
    <link rel="stylesheet" href="/css/tailwindcss.css" />
  </head>
  <body>
    <%- include("../partials/header") %>
    <main>
      <div class="container mx-auto">
        <div class="flex flex-wrap -mx-2 overflow-hidden lg:-mx-3 xl:-mx-3">
          <% data.forEach(item => { %>

          <div
            class="
              my-2
              px-5
              w-1/4
              overflow-hidden
              sm:w-full
              md:w-1/2
              lg:my-3 lg:px-3 lg:w-1/3
              xl:my-3 xl:px-3 xl:w-1/4
              flex flex-col
              border border-gray-500
              transform
              transition
              duration-300
              hover:border-opacity-0 hover:bg-blue-600
              rounded-2xl
              cursor-pointer
              py-4
              group
              mx-5
            "
          >
            <h2
              class="
                text-gray-700
                group-hover:text-white
                text-3xl
                font-extrabold
                text-center
              "
            >
              <%= item.title %>
            </h2>
            <p
              class="
                mt-4
                text-sm
                font-semibold
                group-hover:text-gray-300
                text-gray-600 text-center
              "
            >
              <%= item.description %>
            </p>
          </div>

          <% }) %>
        </div>
      </div>
    </main>
    <%- include("../partials/footer") %>

    <script></script>
  </body>
</html>
